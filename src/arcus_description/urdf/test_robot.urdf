<?xml version="1.0"?>
<robot name="test_robot">

  <!-- Base link -->
  <link name="base_link">
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.4 0.3 0.2"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.4 0.3 0.2"/>
      </geometry>
    </collision>
  </link>

  <!-- Drive wheel -->
  <link name="drive_wheel_link">
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Steering wheel -->
  <link name="steering_wheel_link">
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Drive wheel joint -->
  <joint name="drive_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="drive_wheel_link"/>
    <origin xyz="0 0 -0.1"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Steering wheel joint -->
  <joint name="steering_wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steering_wheel_link"/>
    <origin xyz="0.2 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.523599" upper="0.523599" effort="5" velocity="1.0"/>
  </joint>



  <!-- Physical Hardware -->
  <!-- <ros2_control name="test_robot" type="system">
    <hardware>
      <plugin>arcus_hw_plugins/VescDriver</plugin>
    </hardware>

    <joint name="drive_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="steering_wheel_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control> -->

  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>

    <joint name="drive_wheel_joint">
      <command_interface name="velocity"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>

    <joint name="steering_wheel_joint">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="libgz_ros2_control-system.so" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>/home/arcus_ws/install/arcus_description/share/arcus_description/config/test_controllers.yaml</parameters>
      <controller_manager_prefix_node_name>controller_manager</controller_manager_prefix_node_name>
    </plugin>
  </gazebo>
  
</robot>